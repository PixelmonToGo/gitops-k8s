{
  "extends": [
    ":enableRenovate",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "platform": "github",
  "username": "ptgbot",
  "repositories": ["PixelmonToGo/gitops-k8s"],
  "onboarding": false,
  "requireConfig": false,
  "gitAuthor": "Solar <90571000+ptgbot@users.noreply.github.com>",
  "timezone": "UTC",
  "dependencyDashboard": true,
  "stabilityDays": 1,
  "prCreation": "not-pending",
  "commitBody": "Signed-off-by: Solar <ptgbot@users.noreply.github.com>",
  // Do not notify on closed unmerged PRs
  "suppressNotifications": ["prIgnoreNotification"],
  // Do not rebase PRs
  "rebaseWhen": "conflicted",
  "helm-values": {
    "fileMatch": ["./.+\\.yaml$"],
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"],
    "ignorePaths": ["flux-system/", ".github"],
  },
  "regexManagers": [
    {
      "fileMatch": ["./.+\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n",
      ],
      "datasourceTemplate": "helm",
    },
    {
      "fileMatch": ["./.*\\.yaml$"],
      "matchStrings": [
        "DD_VERSION: \"(?<currentValue>.*)\"",
        "GENERIC_PACKS_SUFFIX: \"?forge-(?<currentValue>.+)\\+[a-z]{2}.zip\"?\n",
      ],
      "depNameTemplate": "PixelmonToGo/minecraft-config",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["./.+\\.yaml$"],
      "matchStrings": [
        "image: (?<depName>.*?)\n *imageTag: (?<currentValue>.*)\n",
      ],
      "datasourceTemplate": "docker",
    },
  ],
  "packageRules": [
    // Setup datasources
    {
      "datasources": ["helm"],
      "commitMessageTopic": "Helm chart {{depName}}",
    },
    {
      "datasources": ["docker"],
      "commitMessageTopic": "Docker image {{depName}}",
      "commitMessageExtra": "to {{#if isSingleVersion}}v{{{toVersion}}}{{else}}{{{newValue}}}{{/if}}",
      "updateTypes": ["major", "minor", "patch"],
      "enabled": true,
    },
    // Automerge updates
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
    },
    // Send major updates to pullrequest.com
    {
      "matchUpdateTypes": ["major"],
      "commitMessageSuffix": "[pr]",
    },
    // Add label for Minecraft changes and block automerge
    {
      "automerge": false,
      "labels": ["renovate/minecraft"],
      "matchPaths": ["minecraft/**"],
      "stabilityDays": 7,
    },
    {
      "automerge": false,
      "labels": ["renovate/minecraft-dev"],
      "matchPaths": ["minecraft-dev/**"],
      "stabilityDays": 3,
    },
    // Add labels according to package and update types
    {
      "updateTypes": ["major"],
      "addLabels": ["dependency/major"],
    },
    {
      "updateTypes": ["minor"],
      "addLabels": ["dependency/minor"],
    },
    {
      "updateTypes": ["patch"],
      "addLabels": ["dependency/patch"],
    },
    {
      "datasources": ["helm"],
      "addLabels": ["renovate/helm-release"],
    },
    {
      "datasources": ["docker"],
      "addLabels": ["renovate/image-release"],
    },
    // Isolation for GitHub releases
    {
      "additionalBranchPrefix": "{{{packageFile}}}-",
      "addLabels": ["renovate/github-release"],
      "datasources": ["github-releases"],
      "prCreation": "immediate",
      "separateMajorMinor": true,
      "separateMinorPatch": true,
      "separateMultipleMajor": true,
      "stabilityDays": 0,
    }
  ],
}
